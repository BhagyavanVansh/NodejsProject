<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
   
  {{!-- navbar  --}}
  {{>navbar}}
   <!-- main header  -->
   <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-10 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                                <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                                <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                <div class="temp_info">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_data">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p class="city_name">Get output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp_status"><i class="fa-solid fa-cloud"></i></p>
                            <p class="temp" id="temp"><span id="temp_real">0</span><sup class="calc">o</sup>C</p>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- footer  -->
   {{>footer}}

   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
   <script src="js/main.js"></script>
</body>
</html>